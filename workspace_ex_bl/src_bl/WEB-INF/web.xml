<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


  <!-- ================== Listener Definitions ============================= -->

    <!-- framework -->
    <!-- Load settings used by the GRANDSIGHT_EX framework, before           -->
    <!-- any filters or servlets in the web application are initialized.     -->
    <listener>
        <listener-class>biz.grandsight.ex.ui.core.env.EnvironmentLoaderListener</listener-class>
    </listener>

    <!-- Apache Shiro -->
    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>


  <!-- ================== Filter Definitions ============================== -->

    <!-- Primary Shiro Filter for web applications configuring Shiro -->
    <filter>
        <filter-name>ShiroFilter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>ShiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>


  <!-- ================== Servlet Definitions ============================= -->

    <!-- The Default servlet -->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>
            com.yse.gb.gf.front.Controller_UTF8
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>
            /servlet/com.yse.gb.gf.front.Controller
        </url-pattern>
    </servlet-mapping>

    <!-- The servlet for JSP Frame -->
    <servlet>
        <servlet-name>ViewController</servlet-name>
        <servlet-class>
            com.yse.gb.gf.front.ViewController_UTF8
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewController</servlet-name>
        <url-pattern>
            /servlet/com.yse.gb.gf.front.ViewController
        </url-pattern>
    </servlet-mapping>

    <!-- 2016/04/21 Add JsonController -->
    <!-- The servlet for getting Json on Ajax -->
    <servlet>
        <servlet-name>JsonController</servlet-name>
        <servlet-class>
            com.yse.gb.gf.front.JsonController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsonController</servlet-name>
        <url-pattern>
            /servlet/com.yse.gb.gf.front.JsonController
        </url-pattern>
    </servlet-mapping>

    <!-- 2017/10/25 Add FileUpload -->
    <!-- The servlet for uploading files -->
    <servlet>
        <servlet-name>FileUpload</servlet-name>
        <servlet-class>
            biz.grandsight.ex.ui.fileupload.servlet.FileUpload
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUpload</servlet-name>
        <url-pattern>
            /servlet/FileUpload
        </url-pattern>
    </servlet-mapping>

    <!-- 2017/10/25 Add FileDownload -->
    <!-- The servlet for downloading uploaded files with the file upload servlet -->
    <servlet>
        <servlet-name>FileDownload</servlet-name>
        <servlet-class>
            biz.grandsight.ex.ui.fileupload.servlet.FileDownload
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownload</servlet-name>
        <url-pattern>
            /servlet/FileDownload
        </url-pattern>
    </servlet-mapping>


  <!-- ================== Default Session Configuration =================== -->
  <!-- You can set the default session timeout (in minutes) for all newly   -->
  <!-- created sessions by modifying the value below.                       -->
  <!-- default=30 minute                                                    -->
  <!--         -1:infinitely                                                -->

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>


  <!-- ================== Error Handling ================================== -->
  <!-- You can set the webpages                                             -->

    <error-page>
        <error-code>400</error-code>
        <location>/error/400.html</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/error/403.html</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

<!--
    <error-page>
        <error-code>500</error-code>
        <location>/_SessionErrorPage.html</location>
    </error-page>
-->


  <!-- ================== Access Privileges Using URL Mapping ============= -->
  <!-- You can define zero or more the <security-constraint> tag.           -->

    <!-- SECURITY CONSTRAINT #1 -->
    <security-constraint>
        <display-name>URL Access Denied Security</display-name>
        <web-resource-collection>
            <web-resource-name>Denied Area</web-resource-name>
            <url-pattern>*.classpath</url-pattern>
            <url-pattern>*.project</url-pattern>
            <url-pattern>/ant/*</url-pattern>
            <url-pattern>/bld/bat/*</url-pattern>
            <url-pattern>/bld/template/*</url-pattern>
            <url-pattern>/conf/*</url-pattern>
            <url-pattern>/mst/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
        </auth-constraint>
    </security-constraint>

</web-app>
